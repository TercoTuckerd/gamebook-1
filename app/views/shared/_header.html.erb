<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='header'>
  <div class="head-image">
    <div class="heading">
      <h1 class="logo"><a href="/">GAMEBOOK</a></h1>
    </div>
    <div class='nav'>
      <% if user_signed_in? %>
        <%= link_to current_user.nickname, games_path, class: "user-nickname" %></li>
        <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %></li>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </div>
  </div>
</header>